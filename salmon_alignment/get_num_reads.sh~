#!/bin/bash

# Make a table with the NumReads column from each salmon quant.sf file
for i in {1..10}
do
	VAR=$(printf "%02d" $i)
	cat mapped_reads/sample_$VAR/quant.sf | cut -f5 | paste >> num_reads.txt
done

# Add gene name column
#paste mapped_reads/sample_01/quant.sf num_reads.txt | awk '{print $1}' >> num_reads.txt

